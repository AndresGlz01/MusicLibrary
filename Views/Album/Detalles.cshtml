@model MusicLibrary.Models.Album

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaLanzamiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaLanzamiento)
        </dd>
        <dt class = "col-sm-2">
            Artista
        </dt>
        <dd class = "col-sm-10">
            <a asp-action="Detalles" asp-controller="Artista" asp-route-id="@(Model.IdArtista)">
                @Html.DisplayFor(model => model.IdArtistaNavigation.Nombre)
            </a>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Index">Regresar</a>
</div>
@{
    if (ViewBag.albumsCount > 0)
    {
    <h2 class="mt-3">Más del artista</h2>
    <ul class="list-group mt-3">
        @foreach (var item in ViewBag.albums)
        {
            <a class="list-group-item border-2 mt-1 mb-1 rounded-3" asp-action="Detalles" asp-controller="Album" asp-route-id="@(item.Id)">
                @(item.Nombre) - <span class="text-info">@(item.FechaLanzamiento.ToString("dd/MM/yyyy"))</span>
            </a>
        }
    </ul>
    }
}