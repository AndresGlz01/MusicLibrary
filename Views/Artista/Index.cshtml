@model IEnumerable<MusicLibrary.Models.Artistum>

@{
    ViewData["Title"] = "Artistas";
}

<h1>Lista de artistas</h1>

<p>
    <a asp-action="Crear" class="btn btn-outline-primary">Crear nuevo</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdGeneroNavigation)
            </th>
            <th>
                Cantidad de albums
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nacionalidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    <a asp-action="Detalles" asp-controller="Genero" asp-route-id="@(item.IdGenero)">
                        @Html.DisplayFor(modelItem => item.IdGeneroNavigation.Nombre)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Albums.Count)
                </td>
                <td>
                    <a asp-action="Modificar" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Modificar</a>
                    <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalles</a>
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
